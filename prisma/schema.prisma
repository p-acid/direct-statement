generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  token      String
  name       String
  thumbnail  String
  businesses Business[]
  companies  Company[]
}

model Business {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  number  String
  type    String
  sector  String
  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}

model Company {
  id      Int     @id @default(autoincrement())
  name    String
  address String
  email   String? @unique
  ownerId Int
  owner   User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}
